Niveis()

function Niveis(){
    var Vitorias = 15
    var Derrotas = 10

    function calculo_rankeadas(){
        return Vitorias - Derrotas
    }

    if (calculo_rankeadas() > 0 && calculo_rankeadas() < 10){
    ferro()
    }

    function ferro(){

        let Ferro = "Ferro"
        switch (Ferro){
            case Ferro:
                console.log("O Heroi tem saldo de " + Vitorias + " está no nivel de " + Ferro)
                return(Vitorias)
        }
    }


    if (calculo_rankeadas() > 10 && calculo_rankeadas() < 21){
    bronze()
    }

    function bronze(){
        let Bronze = "Bronze"
        switch (Bronze){
            case Bronze:
                console.log ("O Heroi tem saldo de " + Vitorias + " está no nivel de " + Bronze)
                return(Vitorias)
        }
    }


    if (calculo_rankeadas() > 20 && calculo_rankeadas() < 51){ 
    prata()
    }


    function prata(){
        let Prata = "Prata"
        switch (Prata){
            case Prata:
                console.log ("O Heroi tem saldo de " + Vitorias + " está no nivel de " + Prata)
                return(Vitorias)
        }
    }

    
    if (calculo_rankeadas() > 50 && calculo_rankeadas() < 81){
    ouro()
    }

    function ouro(){
        let Ouro = "Ouro"
        switch (Ouro){
            case Ouro:
                console.log ("O Heroi tem saldo de " + Saldo_Vitorias + " está no nivel de " + Ouro)
                return(Vitorias)
        }
    }


    if(calculo_rankeadas() > 80 && calculo_rankeadas() < 91){
    diamante()
    }

    function diamante(){
        let Diamante = "Diamante"
        switch (Diamante){
            case Diamante:
                console.log("O Heroi tem saldo de " + Saldo_Vitorias + " está no nivel de " + Diamante)
                return(Vitorias)
        }
    }


    if(calculo_rankeadas() > 90 && calculo_rankeadas() < 101)
    lendario()

    function lendario(){
        let lendario = "Lendário"
        switch (lendario){
            case lendario:
                console.log ("O Heroi tem saldo de " + Saldo_Vitorias + " está no nivel de " + lendario)
                return(Vitorias)
        }
    }


    if(calculo_rankeadas() >= 101)
    imortal()

    function imortal(){
        let imortal = "imortal"
        switch (imortal){
            case imortal:
                console.log ("O Heroi tem saldo de " + Saldo_Vitorias + " está no nivel de " + imortal)
                return(Vitorias)
        }
    }


    while (calculo_rankeadas() === 0){
        console.log("Jogador iniciante detectado !")
        break
    }
}
